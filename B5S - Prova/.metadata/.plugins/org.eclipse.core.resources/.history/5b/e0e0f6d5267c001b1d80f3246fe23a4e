package prova.admissao.perguntas;

public class Pergunta6 {
	/*
	 * A função deverá receber um array de inteiros como parâmetro e deverá retornar
	 * o mesmo array ordenado em ordem crescente. Ex: Input: [5,1,0,7,3,3] - Output:
	 * [0,1,3,3,5,7]
	 *
	 * @param array $array - Array a ser ordenado
	 * 
	 * @return array
	 * 
	 * function ordenarArray(array $array):array{}
	 */

	public static int[] ordenarArray(int[] array) {
		int aux, ord, troca = 0;

		for (int i = 0; i <= array.length - 1; i++) {
			if (i == array.length - 1) {
				for (int x = 0; x <= array.length - 1; x++) {
					if (x == array.length - 1) {
						return array;
					}
					if (array[x] > array[x + 1]) {
						i = 0;
						break;
					}
				}
			}
			if (array[i] > array[i + 1]) {
				aux = array[i + 1];
				ord = array[i];
				array[i] = aux;
				array[i + 1] = ord;
				troca++;
			}
		}
		int[] z = { 0 };
		return z;
	}
}